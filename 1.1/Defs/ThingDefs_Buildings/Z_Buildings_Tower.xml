<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>Z_TowerSSS</defName>
    <label>Z_暴风_蜂巢式磁轨炮台</label>
    <thingClass>Building_TurretGun</thingClass>
    <graphicData>
      <texPath>Things/Building/Turret/Base_Base1</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(3,3)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
    </graphicData>
    <uiIconPath>Things/Building/Turret/Tower_Base1_UI</uiIconPath>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <statBases>
      <MaxHitPoints>9000000000</MaxHitPoints>
      <Flammability>0</Flammability>
      <WorkToBuild>3000</WorkToBuild>
      <Mass>20</Mass>
      <Beauty>50000</Beauty>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable" />
      <li Class="CompProperties_Power">
        <compClass>CompPowerPlant</compClass>
        <basePowerConsumption>-100000</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_Breakdownable" />
    </comps>
    <description>Z_送眼前的一切敌人去见上帝。精确且致命
level:SSS.</description>
    <passability>PassThroughOnly</passability>
    <pathCost>5</pathCost>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>
    <hasTooltip>true</hasTooltip>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>1</costStuffCount>
    <costList>
      <Steel>5</Steel>
    </costList>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <designationCategory>Security</designationCategory>
    <specialDisplayRadius>35</specialDisplayRadius>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Z_TowerBase1A</turretGunDef>
      <turretBurstCooldownTime>0</turretBurstCooldownTime>
    </building>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Z_TurretgunA</defName>
    <label>Z_磁轨炮集束</label>
